<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreen.help.HelpActivity">

    <include layout="@layout/toolbar_child" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/big_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/regular"
                android:paddingTop="@dimen/med_padding"
                android:paddingBottom="@dimen/med_padding"
                android:text="@string/help_support"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

         <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@drawable/bg_grey"
                android:drawableEnd="@drawable/key_drop_24dp"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:padding="@dimen/small_padding"
                android:text="About Food"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/margin_10dp"
                android:background="@drawable/bg_grey"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></Spinner>
            </RelativeLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@drawable/bg_grey"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:padding="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@drawable/bg_grey"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:hint="@string/phone"
                android:padding="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/med_padding"
                android:background="@drawable/bg_grey"
                android:fontFamily="@font/regular"
                android:gravity="top"
                android:hint="Message"
                android:minLines="3"
                android:padding="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />


            <Button
                android:id="@+id/ux_btn_continue_loginPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/big_margin"
                android:background="@drawable/round_corner_button"
                android:fontFamily="@font/regular"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>