<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/med_padding"
        android:layout_marginEnd="@dimen/med_padding"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:id="@+id/top"
            android:background="@color/green"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/margin_20dp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_track"/>

        <View
            android:id="@+id/btm"
            android:layout_gravity="center_horizontal"
            android:layout_width="1dp"
            android:background="@color/green"
            android:layout_height="@dimen/margin_20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Order Accepted"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="11:40 am "
            android:textColor="@color/txt_light"
            android:textSize="@dimen/small_txt" />
    </LinearLayout>

</LinearLayout>