<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbgblue"
    android:orientation="vertical"
    tools:context=".ServiceProfile">

    <include
        android:id="@+id/toplayout"
        layout="@layout/toolbar_child" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toplayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/white"

                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_8dp"
                android:paddingBottom="@dimen/margin_8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ux_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:background="@drawable/round_edittext_blueborder"
                        android:drawableStart="@drawable/call_"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:paddingStart="@dimen/margin_8dp"
                        android:paddingTop="@dimen/margin_4dp"

                        android:paddingEnd="@dimen/margin_8dp"
                        android:paddingBottom="@dimen/margin_4dp"
                        android:text="Call Now"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:layout_weight="1"

                            android:src="@drawable/img"
                            app:civ_border_color="@android:color/transparent"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_4dp"
                            android:text="Jack Harry"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/margin_4dp"
                            android:text="$ 15.00 Per Hour"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_size_17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/ratingbar_service"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textViewTitle"
                        android:layout_alignParentEnd="true"
android:rating="5"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:progress="5"
                        android:progressTint="@color/orange" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/margin_20dp"
                    android:paddingEnd="@dimen/margin_20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_graystroke"
                        android:gravity="center"
                        android:padding="@dimen/margin_4dp"
                        android:text="@string/plumber"
                        android:textSize="@dimen/text_size_11sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_graystroke"
                        android:gravity="center"
                        android:padding="@dimen/margin_4dp"
                        android:text="@string/plumber"
                        android:textSize="@dimen/text_size_11sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_graystroke"
                        android:gravity="center"
                        android:padding="@dimen/margin_4dp"
                        android:text="@string/plumber"
                        android:textSize="@dimen/text_size_11sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_graystroke"
                        android:gravity="center"
                        android:padding="@dimen/margin_4dp"
                        android:text="@string/plumber"
                        android:textSize="@dimen/text_size_11sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/ux_btn_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_50dp"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:layout_marginEnd="@dimen/margin_50dp"
                    android:background="@drawable/round_corner_colorprimary"
                    android:text="Book Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_19sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/white"
                android:padding="@dimen/margin_4dp"
                android:text="Job Completed"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_serviceprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingTop="@dimen/margin_8dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>