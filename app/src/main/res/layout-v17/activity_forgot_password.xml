<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg_blue"
    android:orientation="vertical"
    tools:context=".forgot.ForgotPassword">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/top_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"

                    android:fontFamily="@font/regular"
                    android:text="Forgot Password"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/med_padding"
                android:layout_marginTop="@dimen/med_padding"
                android:layout_marginEnd="@dimen/med_padding"
                android:orientation="vertical"
                android:padding="@dimen/med_padding">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/med_padding"
                    android:id="@+id/ed_email"
                    android:drawablePadding="@dimen/margin_8dp"
                    android:background="@drawable/blue_divider"
                    android:drawableStart="@drawable/mail_"
                    android:fontFamily="@font/regular"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_registered_email"
                    android:padding="@dimen/small_padding" />


                <TextView
                    android:id="@+id/txt_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/margin_8dp"
                    android:text="Note:-"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/text_size_15sp" />


                <Button
                    android:id="@+id/ux_btn_continue_otpPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/med_padding"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginEnd="@dimen/med_padding"
                    android:background="@drawable/round_corner_button"
                    android:text="@string/forgot"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="@dimen/med_padding"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/med_padding"
                    android:text="@string/login_now"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_17sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>