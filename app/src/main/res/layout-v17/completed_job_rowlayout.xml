<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/lightbgblue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:paddingEnd="@dimen/margin_10dp"
android:drawableStart="@drawable/ic_brightness_red_24dp"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Completed"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:padding="@dimen/margin_4dp"
                android:text="APR 22, 2018 02:22PM"

                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/servicetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text="PLUMBER  -"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text=" JACK HARRY"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_4dp"
            android:drawableStart="@drawable/ic_brightness_1_black_24dp"
            android:drawablePadding="@dimen/margin_4dp"
            android:text="Job Location"
            android:textSize="@dimen/text_size_15sp" />

        <TextView

            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_4dp"
            android:text="District 2 1323 Riverside Drive Redding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_4dp"
            android:text="530-225-3426"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/ratingbar_completed"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitle"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="2dp"
                    android:gravity="start|center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progress="5"
                    android:progressTint="@color/orange"
                    android:visibility="visible" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/edit"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/ratingbar_completed"
                    android:padding="@dimen/margin_8dp"
                    android:text="Edit"
                    android:layout_marginStart="@dimen/margin_4dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/ux_txt_ratenow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_edittext_blueborder"
                    android:gravity="center"
                    android:padding="@dimen/margin_8dp"
                    android:text="Rate Now"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_19sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Payment:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Online Payment"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>