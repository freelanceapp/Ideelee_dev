<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    android:clickable="true"
    android:background="@drawable/grey_divider"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/extra_small"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:padding="@dimen/small_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/extra_small"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/res_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/small_padding"
                    android:text="Burger King"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_txt" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/small_padding"
                    android:text="Live Tracking"
                    android:fontFamily="@font/regular"
                    android:gravity="right"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/small_txt" />
            </LinearLayout>
            <TextView
                android:id="@+id/summery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:fontFamily="@font/regular"
                android:text="1 x Burger, 2 x Burger , 1 x Burger"
                android:textColor="@color/txt_light"
                android:textSize="@dimen/small_txt" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"

            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:layout_weight="6.5"
            android:padding="@dimen/small_padding"
            android:text="21 Apr, 2019 11:40 am"
            android:textColor="@color/black"
            android:textSize="@dimen/small_txt" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:padding="@dimen/small_padding"
            android:text="$110.00"
            android:fontFamily="@font/regular"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>
</LinearLayout>