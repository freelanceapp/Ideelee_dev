<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_16dp"
    android:background="@color/white"
    tools:context=".Splash">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/logo_"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_27sp"
        android:fontFamily="@font/regular"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/welcometoideelee"
        android:layout_height="wrap_content" />
<ProgressBar
    android:id="@+id/splash_screen_progress_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_size_9sp"
    android:visibility="gone"
    android:layout_marginLeft="@dimen/margin_24dp"
    android:layout_marginRight="@dimen/margin_24dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:progressDrawable="@drawable/progress"
    style="?android:attr/progressBarStyleHorizontal"  />
</RelativeLayout>