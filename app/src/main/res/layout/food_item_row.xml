<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_padding"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/extra_small"
                android:text="Blue cheese dressing"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/extra_small"
                android:text="$ 20.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/small_txt" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add +"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/extra_small"
                android:paddingLeft="@dimen/med_padding"
                android:paddingRight="@dimen/med_padding"
                android:paddingTop="@dimen/extra_small"
                android:paddingBottom="@dimen/extra_small"
                android:background="@drawable/black_stroke"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>