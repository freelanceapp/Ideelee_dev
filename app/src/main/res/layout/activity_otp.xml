<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:padding="@dimen/margin_24dp"
android:background="@drawable/bg1"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context=".OTP">

<TextView
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:layout_marginTop="@dimen/margin_28dp"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif"
    android:text="@string/OTP"
    android:textColor="@color/white"
    android:textSize="@dimen/text_size_23sp"
    android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_30dp"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/enterotp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_17sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_24dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="0:52"

        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17sp"
        />
    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/RESENDOTP"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_17sp"
        />
    </LinearLayout>
</LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:padding="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/round_corner_edittext"
        android:layout_height="wrap_content" />



    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/CONTINUE"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:id="@+id/ux_btn_continue_otpPage"
        android:textSize="@dimen/text_size_17sp"
        android:background="@drawable/round_corner_button"
        android:layout_height="wrap_content" />

</LinearLayout>


</LinearLayout>