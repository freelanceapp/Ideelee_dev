<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg_blue"
    android:orientation="vertical"
    tools:context=".OTP">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/top_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:fontFamily="@font/regular"
                    android:text="@string/OTP"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/med_padding"
                android:orientation="vertical"
                android:padding="@dimen/med_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/enterotp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/med_padding"
                        android:layout_weight="2"
                        android:background="@drawable/blue_divider"
                        android:maxLength="1"
                        android:gravity="center"
                        android:hint="*"
                        android:padding="@dimen/small_padding" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/med_padding"
                        android:layout_weight="2"
                        android:background="@drawable/blue_divider"
                        android:maxLength="1"
                        android:gravity="center"
                        android:hint="*"
                        android:padding="@dimen/small_padding" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/med_padding"
                        android:layout_weight="2"
                        android:background="@drawable/blue_divider"
                        android:maxLength="1"
                        android:gravity="center"
                        android:hint="*"
                        android:padding="@dimen/small_padding" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/med_padding"
                        android:layout_weight="2"
                        android:background="@drawable/blue_divider"
                        android:maxLength="1"
                        android:gravity="center"
                        android:hint="*"
                        android:padding="@dimen/small_padding" />



                </LinearLayout>

                <com.alahammad.otp_view.OtpView
                    android:id="@+id/otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingLeft="-10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:otp_number="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_padding"
                    android:paddingRight="@dimen/big_margin">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/regular"
                        android:gravity="right"
                        android:text="0:52"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_txt" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/regular"
                        android:layout_marginLeft="@dimen/small_padding"
                        android:gravity="right"
                        android:text="@string/resend_otp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/small_txt" />
                </LinearLayout>

                <Button
                    android:id="@+id/ux_btn_continue_otpPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/med_padding"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginRight="@dimen/med_padding"
                    android:background="@drawable/round_corner_button"
                    android:text="@string/continue_"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="@dimen/med_padding"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/med_padding"
                    android:text="Back"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>