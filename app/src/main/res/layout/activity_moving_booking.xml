<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbgblue"
    android:orientation="vertical">

    <include layout="@layout/toolbar_child" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/regular"
        android:padding="@dimen/margin_8dp"
        android:text="Booking Details :-"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightbgblue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightbgblue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Service Provider"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Jack Harry"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Service Type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Moving and Lifting Services"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/timeslot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Time Slot"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:id="@+id/timeslotvalue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="02 PM-04 PM"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Item"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/regular"
                            android:padding="@dimen/margin_8dp"
                            android:text="5"
                            android:textSize="@dimen/text_size_15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:padding="@dimen/margin_8dp"
                            android:text="change"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Payment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="$15.00"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Tax"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="$01.00"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="Total amount to be paid"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/margin_8dp"
                        android:text="$16.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/regular"
                android:padding="@dimen/margin_8dp"
                android:text="Select payment method you would like to pay"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:checked="false"
                    android:fontFamily="@font/regular"
                    android:text="Online Payment"
                    android:textSize="@dimen/text_size_15sp" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:checked="false"
                    android:fontFamily="@font/regular"
                    android:text="Cash Payment"
                    android:textSize="@dimen/text_size_15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/regular"
                android:paddingLeft="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingRight="@dimen/margin_8dp"
                android:paddingBottom="@dimen/margin_4dp"
                android:text="Number of Persons Required"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="gone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:background="@drawable/gray_rectangle_stroke"
                android:gravity="top"
                android:minLines="2"
                android:padding="@dimen/margin_4dp"
                android:visibility="gone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@drawable/gray_rectangle_stroke"
                android:gravity="top"
                android:hint="Additional Booking Notes"
                android:minLines="4"
                android:padding="@dimen/margin_4dp" />

            <TextView
                android:id="@+id/textview_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/white"
                android:fontFamily="@font/regular"
                android:padding="@dimen/margin_8dp"
                android:text="Note:-"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_2dp"
                android:background="@color/white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ux_btn_confirmbooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_44dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginRight="@dimen/margin_44dp"
                    android:background="@drawable/round_corner_colorprimary"
                    android:fontFamily="@font/regular"
                    android:text="Confirm Booking"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:background="@color/white"
                    android:fontFamily="@font/regular"
                    android:paddingBottom="@dimen/margin_20dp"
                    android:text="Back"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>