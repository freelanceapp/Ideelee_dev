<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_24dp"
        android:background="@drawable/round_corner_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_14dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:src="@drawable/img"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:padding="@dimen/margin_4dp"
            android:text="Jack Vehicle Service"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp" />

        <LinearLayout
            android:id="@+id/lay_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_8dp">


            <TextView
                android:id="@+id/book_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/regular"
                android:gravity="left"
                android:padding="@dimen/margin_2dp"
                android:text="$ 15.00 Per hour"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/regular"
                android:gravity="left"
                android:padding="@dimen/margin_4dp"
                android:text="Already Booked Schedule"
                android:textSize="@dimen/text_size_13sp" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag"
                style="@style/TagGroup"
                android:layout_marginBottom="@dimen/margin_4dp"
                app:atg_backgroundColor="@color/colorPrimary"
                app:atg_horizontalPadding="@dimen/margin_16dp"
                app:atg_textColor="@color/white"
                app:atg_textSize="@dimen/text_size_11sp"
                app:atg_verticalPadding="@dimen/margin_8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/ux_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_30dp"
            android:background="@drawable/round_edittext_blueborder"
            android:fontFamily="@font/regular"
            android:text="Book Schedule"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_19sp" />


    </LinearLayout>
</LinearLayout>