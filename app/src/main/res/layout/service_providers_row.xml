<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_8dp"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ux_img_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="@dimen/margin_4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_weight="1"
    android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_8dp"

                    android:layout_gravity="right|end"
                    android:minWidth="@dimen/margin_8dp"
                    android:layout_below="@id/textViewTitle"
                    android:layout_marginTop="@dimen/margin_4dp"
                    style="?android:attr/ratingBarStyleSmall"               />

</LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/distance"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:drawableLeft="@drawable/locationmap"
                    android:textColor="@color/black" />
                <me.gujun.android.taggroup.TagGroup
                    android:id="@+id/tag_group"
                    app:atg_textColor="@color/gray"
                    app:atg_borderColor="@color/gray"
                    style="@style/TagGroup" />
            </LinearLayout>
            </LinearLayout>

</LinearLayout>