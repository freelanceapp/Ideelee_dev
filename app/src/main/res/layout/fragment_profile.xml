<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreen.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/med_padding">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/med_padding" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/img"
                    android:layout_centerVertical="true"
                    android:src="@drawable/camera_profile" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/med_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/extra_small"
                    android:text="@string/name"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/med_padding"
                    android:background="@drawable/square_border"
                    android:fontFamily="@font/regular"
                    android:hint="@string/type_name_here"
                    android:inputType="textPersonName"
                    android:padding="@dimen/small_padding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/extra_small"
                    android:text="@string/phone"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/med_padding"
                    android:background="@drawable/square_border"
                    android:fontFamily="@font/regular"
                    android:hint="@string/phone_hint"
                    android:inputType="number"
                    android:padding="@dimen/small_padding" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:padding="@dimen/extra_small"
                        android:text="@string/address"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/extra_small"
                        android:text="Change"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="@dimen/extra_small"
                        android:textSize="@dimen/normal_text" />

                </RelativeLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/med_padding"
                    android:background="@drawable/square_border"
                    android:fontFamily="@font/regular"
                    android:gravity="top"
                    android:hint="@string/enter_your_address_here"
                    android:inputType="textPostalAddress"
                    android:minLines="2"
                    android:padding="@dimen/small_padding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/extra_small"
                    android:text="@string/email"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/med_padding"
                    android:background="@drawable/square_border"
                    android:fontFamily="@font/regular"
                    android:hint="johan.doe@example.com"
                    android:padding="@dimen/small_padding" />

                <Button
                    android:id="@+id/ux_btn_continue_loginPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:layout_marginRight="@dimen/big_margin"
                    android:background="@drawable/round_corner_button"
                    android:inputType="textEmailAddress"
                    android:text="Update"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>