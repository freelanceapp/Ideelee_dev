<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightbgblue"
    tools:context=".BookingActivity">
    <include layout="@layout/toolbar_child" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_8dp"
        android:text="Booking Details :-"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/lightbgblue"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/lightbgblue"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Service Provider"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Jack Harry"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Service Type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Plumber"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Time Slot"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="02 PM-04 PM"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Payment"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="$15.00"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Tax"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="$01.00"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="Total amount to be paid"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_8dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:text="$16.00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/margin_8dp"
            android:text="Select payment method you would like to pay"
android:layout_marginTop="@dimen/margin_2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Online Payment"
                android:layout_marginTop="@dimen/margin_8dp"
                android:checked="false"
                android:textSize="@dimen/text_size_15sp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cash Payment"
                android:layout_marginTop="@dimen/margin_8dp"
                android:checked="false"
                android:textSize="@dimen/text_size_15sp" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Note:-"
                android:padding="@dimen/margin_8dp"
                android:id="@+id/textview_note"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/ux_btn_confirmbooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_colorprimary"
            android:text="Confirm Booking"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_44dp"
            android:layout_marginLeft="@dimen/margin_44dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Back"
            android:paddingBottom="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_17sp" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>