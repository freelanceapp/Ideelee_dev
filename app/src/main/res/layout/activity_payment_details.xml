<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbgblue"
android:orientation="vertical"
    tools:context=".PaymentDetailsActivity">
    <include layout="@layout/toolbar_child"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_8dp"
        android:text="Payment Details :-"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/lightbgblue"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/lightbgblue"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="Payment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="$15.00"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="Additional Charges(If any)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_edittext"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_marginRight="@dimen/margin_50dp"
                        android:layout_marginLeft="@dimen/margin_50dp"
                      android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="Tax"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="$01.00"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="Total amount to be paid"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/margin_8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_17sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_8dp"
                        android:text="$16.00"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_2dp"
        android:padding="@dimen/margin_30dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/ux_btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_colorprimary"
        android:text="Pay $16.00"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_40dp"
        android:layout_marginLeft="@dimen/margin_40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_19sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Back"
        android:textSize="@dimen/text_size_15sp"
        android:paddingBottom="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"/>
        </LinearLayout>
</LinearLayout>