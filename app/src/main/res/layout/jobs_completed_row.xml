<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:include="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4dp"

        android:orientation="vertical"
        android:background="@drawable/square_border"
        android:padding="@dimen/margin_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:paddingRight="@dimen/margin_10dp"
                    android:drawableLeft="@drawable/ic_brightness_red_24dp"
                    android:drawablePadding="@dimen/margin_4dp"
                    android:text="Status:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/margin_4dp"
                    android:text="Completed"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:padding="@dimen/margin_4dp"
                android:text="APR 22, 2018 02:00PM"

                android:textSize="@dimen/text_size_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/servicetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text="PLUMBER  -"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text="FOR 2 HOURS"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:src="@drawable/ic_brightness_1_black_24dp"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_4dp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Job Location"
                android:textSize="@dimen/text_size_15sp" />

            <TextView

                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text="District 2 1323 Riverside Drive Redding"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_4dp"
                android:text="530-225-3426"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10dp">

                <RatingBar
                    android:id="@+id/ratingbar_serviceprofile"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitle"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="2dp"
                    android:gravity="left|center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progress="5"
                    android:progressTint="@color/orange"
                    android:visibility="visible" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/margin_4dp"
                    android:text="Payment:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="@dimen/margin_4dp"
                    android:text="Cash Payment"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>