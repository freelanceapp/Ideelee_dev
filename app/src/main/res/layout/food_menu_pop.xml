<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/med_padding"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_dialog"
    android:padding="@dimen/small_padding"
    android:layout_marginBottom="@dimen/med_padding"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/grey_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="@string/breakfast"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/grey_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="Main Course"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="35"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/grey_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="Breads"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/grey_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="Meals"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="30"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/grey_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="Chinese dishes"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/small_padding"
            android:text="Accompaniments"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/small_padding"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>
</LinearLayout>